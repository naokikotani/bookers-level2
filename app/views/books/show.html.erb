<%= render 'users/header', user: @user %>
<p id="notice"><%=  notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-3">
        <%= render 'users/list', book: @book, user: @user %>
    </div>
    <div class="col-md-8 offset-md-1">
        <h1>Book detail</h1>
        <p><%= link_to @user.name, user_path(@user.id) %></p>
        <p><%= link_to @book.title, book_path(@book.id) %></p>
        <p><%= @book.body %></p>
        <% if @user.id == current_user.id %>
        　<%= link_to "Edit", edit_book_path(@book.id) %>
        　<%= link_to "Destroy", book_path(@book.id), method: :delete %>
      　<% end %>
    </div>
  </div>
</div>
