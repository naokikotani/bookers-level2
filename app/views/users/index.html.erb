<%= render 'users/header', user: @user %>

<div class="container">
  <div class="row">
    <div class="col-xs-2">
        <%= render 'users/list', book: @book, user: @user %>
    </div>
    <div class="col-xs-6">
      <h1>Users</h1>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">image</th>
            <th scope="col">name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th scope="row">
                <%= link_to user_path(user.id) do %>
                  <%= attachment_image_tag user, :profile_image, size: "50x50", fallback: "no_image.jpg" %>
                <% end %>
                </th>
              <td><%= user.name %></td>
              <td><%= link_to "show",user_path(user.id) %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
