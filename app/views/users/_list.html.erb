<div>
<h1>User Info</h1>
<%= attachment_image_tag user, :profile_image, size: "80x80", fallback: "no_image.jpg" %>
<table class="table">
  <tbody><tr></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th><%= user.introduction %></th>
	  <th></th>
  </tr>
</tbody></table>

<%= link_to edit_user_path(user.id) do %>
　<i class="fas fa-user-cog btn btn-outline-secondary btn-block"></i>
<% end %>

<h2>New book</h2>
<% if book.errors.any? %>
  <%= book.errors.count %>件のerrorが発生しました
  <% book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= form_with  model: book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>
</div>

